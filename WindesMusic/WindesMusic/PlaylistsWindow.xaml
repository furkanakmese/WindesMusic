<Window x:Class="WindesMusic.PlaylistsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindesMusic"
        mc:Ignorable="d"
        Title="PlaylistsWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="lblTitle" HorizontalAlignment="Left" Margin="31,33,0,0" TextWrapping="Wrap" Text="Your playlists" VerticalAlignment="Top" FontSize="22"/>
        <StackPanel x:Name="stackPlaylists" HorizontalAlignment="Left" Height="253" Margin="31,98,0,0" VerticalAlignment="Top" Width="262"/>
        <TextBox x:Name="inputSearch" HorizontalAlignment="Left" Height="29" Margin="196,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293" FontSize="16"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="494,33,0,0" VerticalAlignment="Top" Width="77" Height="29" FontSize="14" Click="btnSearch_Click"/>

    </Grid>
</Window>
