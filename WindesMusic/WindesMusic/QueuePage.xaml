<Page x:Class="WindesMusic.QueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindesMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QueuePage"
      Background="{DynamicResource MainColor}"
      Margin="0,0,0,25">

    <Grid x:Name="QueuePageMainGrid">
        <Label x:Name="PlaylistSongs" Content="Queue" FontSize="25" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="-100,20,0,0"/>
        <Button x:Name="QueueToPlaylist" Content="Add songs to playlist" Click="AddQueueToPlaylist" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,30,120,0"/>
        <ScrollViewer Height="375" Margin="0,75,0,0">
            <Grid x:Name="QueueList" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,-35,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
