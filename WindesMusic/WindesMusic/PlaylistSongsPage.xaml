<Page x:Class="WindesMusic.PlaylistSongsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindesMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="644"
      Title="PlaylistSongsPage"
      Background="{DynamicResource MainColor}"
      >

    <Grid x:Name="PlaylistSongsPageMainGrid">
        <StackPanel x:Name="PlaylistSongs" Height="450" VerticalAlignment="Top" Width="644" Margin="0,0,0,0">
            <StackPanel x:Name="PlaylistName" Height="100" VerticalAlignment="Top" Width="644" Margin="0,0,0,0"/>
            <ScrollViewer Height="185" Margin="0,0,0,0">
                <Grid x:Name="SongList" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
