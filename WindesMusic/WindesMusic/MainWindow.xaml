<Window x:Class="WindesMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindesMusic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Arial"
        Background="{DynamicResource MainColor}"
        ResizeMode="NoResize">
    <Grid x:Name="Main">
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" Height="50" Background="DarkGray" Margin="150,0,-0.4,0" Orientation="Horizontal">
                <TextBox Margin="10,5,0,5.6" Style="{StaticResource placeHolder}" Background="DarkGray" FontSize="30" Tag="Search" Width="616" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Left" Width="150" Margin="0,-49.6,0,50" Background="DimGray">
                <Image Source="Images/WindesheimLogo.png" HorizontalAlignment="Left" Height="41" Margin="25,5,0,5"/>
                <Button Style="{StaticResource MenuButton}" Content="Account" Margin="25,25,0,5"/>
                <Button Style="{StaticResource MenuButton}" Content="Recommended" Margin="25,0,0,5"/>
                <Button Style="{StaticResource MenuButton}" Content="Playlists" Margin="25,20,0,5"/>
                <Separator Width="100" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button Style="{StaticResource MenuButton}" Content="+ Create Playlist" Margin="25,5,0,5"/>
                <ScrollViewer HorizontalAlignment="Left" Height="126" Margin="10,10,0,0" VerticalAlignment="Top" Width="140">
                    <StackPanel Name="PlaylistList" Height="250">

                    </StackPanel>
                </ScrollViewer>

            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Background="DarkGray" Height="60" Margin="-150.4,0,-0.4,0">
                <Button x:Name="StartAndPauze" Click="Play_Button_Click" Height="25" Width="25" HorizontalAlignment="Left" Margin="125,0,0,0">
                    <Image Source="Images/Pauzeknop.jpg" x:Name="PlayButton" Width="15" Height="15" Margin="0"/>
                </Button>
                <Button x:Name="Stop" Click="Stop_Button_Click" Height="25" Width="25" Margin="5,0,0,0">
                    <Image Source="Images/Stopknop.png" Width="15" Height="15"></Image>
                </Button>
                <StackPanel  Orientation="Vertical" Background="DarkGray" Margin="50,0,0,0">
                    <Label Name="NameOfSong" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="0" Margin="0,10,0,5">Song</Label>
                    <Slider x:Name="PlaceInSongSlider" Thumb.DragCompleted="Place_In_Song_Slider_DragCompleted" Thumb.DragStarted="PlaceInSongSlider_DragStarted" Maximum="100" HorizontalAlignment="Center" Width="300" Height="20" Margin="0,0,0,0"/>
                </StackPanel>
                <Slider x:Name="volumeSlider" ValueChanged="Volume_Slider_ValueChanged" Maximum="100" Minimum="0" Value="100" Width="100" Height="20" TickFrequency="10" Margin="50,0,0,0" />


                <!--<Grid Height="18" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="150" Margin="347,5,346.6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Button HorizontalAlignment="Center" Grid.Column="0" Content="sd" Margin="25,0,0,5"/>
                </Grid>-->
                
            </StackPanel>
            <StackPanel x:Name="PlaylistName" Height="295" VerticalAlignment="Top" Width="643" Margin="0,0,0,0">
                <StackPanel x:Name="SongList" Height="225" Margin="0,70,0,0">

                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
