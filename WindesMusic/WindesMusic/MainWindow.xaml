<Window x:Class="WindesMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindesMusic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Arial"
        Background="{DynamicResource MainColor}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Frame x:Name="MainFrame" Margin="150,50,-0.4,76" NavigationUIVisibility="Hidden"/>
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" Height="50" Background="DarkGray" Margin="150,0,0,0" Orientation="Horizontal">
                <TextBox Margin="10,5,0,5.6" Style="{StaticResource placeHolder}" Background="DarkGray" FontSize="30" Tag="Search" Width="616" HorizontalAlignment="Stretch" GotFocus="SearchbarGotFocus" SelectionBrush="#FFFFCB05"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Left" Width="150" Margin="0,-49.6,0,50" Background="DimGray">
                <Image Source="Img/WindesheimLogoMetTekst.jpg" HorizontalAlignment="Left" Height="41" Margin="20,5,0,5"/>
                <Button Style="{StaticResource MenuButton}" Content="Account" Margin="25,25,0,5" Click="BtnClickAccount"/>
                <Button Style="{StaticResource MenuButton}" Content="Recommended" Margin="25,0,0,5" Click="BtnClickRecommended"/>
                <Button Style="{StaticResource MenuButton}" Content="Playlists" Margin="25,20,0,5" Click="BtnClickPlaylists"/>
                <Separator Width="100" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button Style="{StaticResource MenuButton}" Click="NewPlaylistButtonClick" Content="+ Create Playlist" Margin="25,5,0,5"/>
                <ScrollViewer HorizontalAlignment="Left" Height="126" Margin="10,10,0,0" VerticalAlignment="Top" Width="140">
                    <StackPanel Name="PlaylistList" Height="250">
                        
                    </StackPanel>
                </ScrollViewer>

            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Height="75" Margin="-150.4,0,-0.4,0" Background="DarkGray">
                <Slider HorizontalAlignment="Center" Width="250" Height="20" Margin="0,7.5,0,-2.5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label HorizontalAlignment="Center" Grid.Column="0" Content="Song - Artist" Margin="360,0,140,0" />
                    <Button Grid.Column="1" Content="Queue"/>
                    <Button Grid.Column="2" Content="Mute/Unmute"/>
                    <Slider HorizontalAlignment="Right" Width="100" Grid.Column="3"/>
                </Grid>

                <Grid Width="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Shuffle" HorizontalAlignment="Left"/>
                    <Button Grid.Column="1" Content="Previous"/>
                    <Button Grid.Column="2" Content="Play/Pause" HorizontalAlignment="Center"/>
                    <Button Grid.Column="3" Content="Next"/>
                    <Button Grid.Column="4" Content="Repeat" HorizontalAlignment="Right"/>
                </Grid>

            </StackPanel>



        </DockPanel>
    </Grid>
</Window>
