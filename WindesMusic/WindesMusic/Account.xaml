<Page x:Class="WindesMusic.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindesMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Account">

    <Grid>
        <TextBlock x:Name="lblName" Foreground="White" HorizontalAlignment="Left" Margin="10,89,0,0" TextWrapping="Wrap" Text="User: " VerticalAlignment="Top" FontSize="20" Width="89"/>
        <TextBlock x:Name="lblTitle" Foreground="White" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Manage account" VerticalAlignment="Top" FontSize="23" Width="180" Height="41"/>
        <Button x:Name="btnLogout" Content="Log out" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" Width="126" Height="30" Click="btnLogout_Click"/>
    </Grid>
</Page>
